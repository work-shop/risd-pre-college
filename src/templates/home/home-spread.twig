{% macro big_header_spread( slide, last ) %}

    <div class="text-section home-spread-section big-header-spread {% if last %}last-slide{% endif %}" style="background-color:{{slide.overlay_box_color}};">
        <span class="text-block-big">
            <h2 class="home-page-big-header-text">{{ slide.header_text }}</h2>
            <div data-text-color="{{slide.overlay_box_color}}" class="home-page-body-text home-wysiwyg">{{ slide.body_text }}</div>
        </span>
    </div>
    {% if last %}
        <div class="home-footer-padding home-spread-section " style="background-color:{{slide.overlay_box_color}};">&nbsp;</div>
    {% endif %}

{% endmacro %}

